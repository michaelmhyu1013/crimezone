<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:minWidth="600dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/infoWindowCrimeImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="0dp" />

            <TextView
                android:id="@+id/crimeTypeWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/crime_type"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <TextView
            android:id="@+id/neighbourhoodWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/neighbourhood"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/hundredBlockWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hundred_block"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/dateWindow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/date"
            android:textColor="@color/colorPrimaryDark"/>


    </LinearLayout>
</LinearLayout>