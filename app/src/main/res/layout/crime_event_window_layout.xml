<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/crimeTypeWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crime_type" />
        <TextView
            android:id="@+id/hundredBlockWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hundred_block" />

        <TextView
            android:id="@+id/neighbourhoodWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/neighbourhood" />

        <TextView
            android:id="@+id/dateWindow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/date" />


    </LinearLayout>
</LinearLayout>